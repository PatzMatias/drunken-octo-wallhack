<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Products</h1>
      <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title &amp; Description</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
         <% @products.each do |product| %>
          <tr>
            <td>
              <%= image_tag(product.image_url) %>
            </td>
            <td>
              <dl>
                <dt><%= product.title %></dt>
                <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
              </dl>
            </td>
            <td>
              <%= link_to 'Show', product, :class => "btn btn-default mrgn-btm-5" %><br/>
              <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-default mrgn-btm-5" %><br/>
              <%= link_to 'Destroy', product, method: :delete,
                          data: { confirm: 'Are you sure?' }, :class => "btn btn-default mrgn-btm-5" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
      <br>
      <%= link_to 'New Product', new_product_path, :class => 'btn btn-success' %>
    </div>
  </div>
</div>